<%-include('../cabecalho.ejs')%>
<header>
  <div class="title2">Editar Sessão de Jogo</div>
  <div class="subtitle">Edite os dados de uma sessão de jogo</div><br>
</header>
<div class="content">
  <form id="form-sessao" autocomplete="off" method="post">
    <div class="grid">
      <div>
        <label for="id">ID</label>
        <input id="id" name="id" type="text" value="<%= sessao._id %>" readonly required>
      </div>
      <div>
        <label for="id_cliente">Cliente *</label>
        <select id="id_cliente" name="id_cliente" required>
          <option value="">Selecione um cliente</option>
          <% clientes.forEach(cliente => { %>
            <option value="<%= cliente._id %>" <%= String(sessao.id_cliente) === String(cliente._id) ? 'selected' : '' %>>
              <%= cliente.nome %>
            </option>
          <% }); %>
        </select>
      </div>
      <div>
        <label for="id_maquina">Máquina *</label>
        <select id="id_maquina" name="id_maquina" required>
          <option value="">Selecione uma máquina</option>
          <% maquinas.forEach(maquina => { %>
            <option value="<%= maquina._id %>" <%= String(sessao.id_maquina) === String(maquina._id) ? 'selected' : '' %>>
              <%= maquina.nome_arcade %>
            </option>
          <% }); %>
        </select>
      </div>
      <div>
        <label for="id_jogo">Jogo *</label>
        <select id="id_jogo" name="id_jogo" required>
          <option value="">Selecione um jogo</option>
          <% jogos.forEach(jogo => { %>
            <option value="<%= jogo._id %>" <%= String(sessao.id_jogo) === String(jogo._id) ? 'selected' : '' %>>
              <%= jogo.titulo %>
            </option>
          <% }); %>
        </select>
      </div>
      <div>
        <label for="hora_ini">Hora de Início *</label>
        <input type="datetime-local" id="hora_ini" name="hora_ini" value="<%= sessao.hora_ini_input %>" required>
      </div>
      <div>
        <label for="hora_fim">Hora de Término *</label>
        <input type="datetime-local" id="hora_fim" name="hora_fim" value="<%= sessao.hora_fim_input %>" required>
      </div>
      <div>
        <label for="valor_total">Valor Total (R$) *</label>
        <input id="valor_total" name="valor_total" type="number" step="0.01" placeholder="Ex: 20.00" value="<%= sessao.valor_total %>" required>
      </div>
    </div>
    <footer>
      <a type="button" class="btn ghost" id="btn-cancelar" href="/sessao/lst">Cancelar</a>
      <button type="submit" class="btn primary">Salvar</button>
    </footer>
  </form>
</div>

<%-include('../rodape.ejs')%>