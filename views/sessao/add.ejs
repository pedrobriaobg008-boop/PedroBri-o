<%-include('../cabecalho.ejs')%>
<header>
  <div class="title2">Nova Sessão de Jogo</div>
  <div class="subtitle">Adicione uma nova sessão de jogo</div><br>
</header>
<div class="content">
  <form id="form-sessao" autocomplete="off" action="/sessao/add/ok" method="post">
    <div class="grid">
      <div>
        <label for="id_cliente">Cliente *</label>
        <select id="id_cliente" name="id_cliente" required>
          <option value="" disabled selected>Selecione um cliente</option>
          <% clientes.forEach(cliente => { %>
            <option value="<%= cliente._id %>"><%= cliente.nome %></option>
          <% }); %>
        </select>
      </div>
      <div>
        <label for="id_maquina">Máquina *</label>
        <select id="id_maquina" name="id_maquina" required>
          <option value="" disabled selected>Selecione uma máquina</option>
          <% maquinas.forEach(maquina => { %>
            <option value="<%= maquina._id %>"><%= maquina.nome_arcade %></option>
          <% }); %>
        </select>
      </div>
      <div>
        <label for="id_jogo">Jogo *</label>
        <select id="id_jogo" name="id_jogo" required>
          <option value="" disabled selected>Selecione um jogo</option>
          <% jogos.forEach(jogo => { %>
            <option value="<%= jogo._id %>"><%= jogo.titulo %></option>
          <% }); %>
        </select>
      </div>
      <div>
        <label for="hora_ini">Hora de Início *</label>
        <input type="datetime-local" id="hora_ini" name="hora_ini" required>
      </div>
      <div>
        <label for="hora_fim">Hora de Término *</label>
        <input type="datetime-local" id="hora_fim" name="hora_fim" required>
      </div>
      <div>
        <label for="valor_total">Valor Total (R$) *</label>
        <input id="valor_total" name="valor_total" type="number" step="0.01" placeholder="Ex: 20.00" required>
      </div>
    </div>
    <footer>
      <a type="button" class="btn ghost" id="btn-cancelar" href="/sessao/lst">Cancelar</a>
      <button type="submit" class="btn primary">Criar Sessão</button>
    </footer>
  </form>
</div>

<%-include('../rodape.ejs')%>