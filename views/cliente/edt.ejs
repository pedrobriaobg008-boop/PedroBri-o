<%-include('../cabecalho.ejs')%>
  <header>
    <div class="title2">Editar Cliente</div>
    <div class="subtitle">Edite os dados de um cliente</div><br>
  </header>
  <div class="content">
    <form id="form-cliente" autocomplete="off" method="post">
      <div class="grid">
        <div>
          <label for="id">ID</label>
          <input id="id" name="id" type="text" value="<%=cliente.id%>" readonly required>
        </div>
        <div>
          <label for="nome">Nome do Cliente</label>
          <input id="nome" name="nome" type="text" placeholder="Insira o Nome" value="<%=cliente.nome%>" required>
        </div>
        <div>
          <label for="cpf">CPF</label>
          <input id="cpf" name="cpf" type="text" placeholder="Insira o CPF" value="<%=cliente.cpf%>" required>
        </div>
        <div>
          <label for="telefone">Telefone</label>
          <input id="telefone" name="telefone" type="text" placeholder="Insira o Telefone" value="<%=cliente.telefone%>"
            required>
        </div>
        <div>
          <label for="email">Email</label>
          <input id="email" name="email" type="text" placeholder="Insira o Email" value="<%=cliente.email%>" required>
        </div>
        <div>
          <label for="horas_jogadas">Horas Jogadas</label>
          <input id="horas_jogadas" name="horas_jogadas" type="number" placeholder="Insira as Horas Jogadas"
            value="<%=cliente.horas_jogadas%>" required>
        </div>
        <div>
          <label for="pontos">Pontos</label>
          <input id="pontos" name="pontos" type="number" placeholder="Insira os Pontos" value="<%=cliente.pontos%>" required>
        </div>
        <div>
          <label for="jogo_favorito">Jogos Favoritos</label>
          <input id="jogo_favorito" name="jogo_favorito" type="text" placeholder="Insira o Jogo Favorito"
            value="<%=cliente.jogo_favorito%>" required>    
        </div>
        <div>
          <label for="plano_assinatura">Plano de Assinatura</label>
          <input id="plano_assinatura" name="plano_assinatura" type="text" placeholder="Insira o Plano de Assinatura"
            value="<%=cliente.plano_assinatura%>" required>
        </div>
      </div>
      <footer>
        <a type="button" class="btn ghost" id="btn-cancelar" href="/cliente/lst">Cancelar</a>
        <button type="submit" class="btn primary">Salvar</button>
      </footer>
    </form>
  </div>

  <%-include('../rodape.ejs')%>